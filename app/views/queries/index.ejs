<%- include('../shared/head.ejs') %>
</head>

<body>
    <%- include('../shared/navigation.ejs') %>
    <h1>
    <%= pageTitle %>
    </h1>
    <main class="container mx-auto mt-10 px-5 flex flex-row space-x-5">
        <div class="flex flex-col w-full">
            <% queries.forEach(query=> { %>
                <div data-controller="queries" class="flex flex-col w-full border-solid border-2 border-orange-300 rounded-lg p-5 m-2 space-y-5">
                    <div class="flex flex-row w-full text-gray-400 text-xs space-x-5">
                        <label data-queries-target="id"><%= query.uuid %></label>
                        <label><%= query.updated_at %></label>
                        <div class="flex-grow"></div>
                        <button class="btn-danger">Delete</button>
                    </div>
                    <div class="flex flex-col w-full">
                        <label>✍️ <%= query.contents %></label>
                    </div>
                    <div class="flex flex-row space-x-2">
                        <button data-queries-target="toggleGrammarTable" data-action="click->queries#toggleGrammarTable" class="btn-primary btn-primary-deselected">Show Grammar Table</button>
                        <button data-queries-target="toggleGraph" class="btn-primary btn-primary-deselected">Show Graph</button>
                        <button data-queries-target="toggleSimplified" class="btn-primary btn-primary-deselected">Show Simplified</button>
                    </div>
                    <div class="flex flex-col w-full">
                        <div class="flex flex-row">
                            <label data-queries-target="grammarTable" class="hidden"><%= query.output_conll %></label>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </main>

<%- include('../shared/end.ejs') %>